{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "jsx": "preserve",
        "strict": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}